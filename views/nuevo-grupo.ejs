<main class="contenedor contenedor-formularios no-padding">
    <h1><%= nombrePagina %></h1>

    <form class="default-form" action="/nuevo-grupo" method="POST" enctype="multipart/form-data">
        <div class="campo">
            <label>Nombre</label>
            <input type="text" name="nombre" placeholder="Nombre Materia/Grupo">
        </div>   

        <div class="campo descripcion">
            <label>Descripci√≥n</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="descripcion">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>

        <div class="campo">
            <label>Departamento</label>
            <select name="categoria">
                <option value="" selected disabled>-- Elige una departamento --</option>
                <% categorias.forEach(categoria => { %>
                    <option value="<%= categoria.id %>"><%= categoria.nombre %></option>
                <% }) %>
            </select> 
        </div>

        <div class="campo">
            <label>Imagen</label>
            <input type="file" name="imagen">
        </div>

        <!-- <div class="campo">
            <label>Meet(Google/Zoom) </label>
            <input type="url" name="url" placeholder="Enlace clase">
        </div> -->

        <div class="campo enviar">
            <input type="submit" value="Crear Materia/Grupo" class="btn btn-rosa">
        </div>
    </form>
</main>