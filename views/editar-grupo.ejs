<main class="contenedor contenedor-formularios no-padding">
    <h1><%= nombrePagina %></h1>

    <form class="default-form" method="POST">       <div class="campo">
            <label>Nombre</label>
            <input type="text" value="<%= grupo.nombre %>" name="nombre" placeholder="Nombre Materia/Grupo">
        </div>   

        <div class="campo descripcion">
            <label>Descripci√≥n</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="descripcion" value="<%= grupo.descripcion %>">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>

        <div class="campo">
            <label>Departamento</label>
            <select name="categoria">
                <option value="" selected disabled>-- Elige un departamento --</option>
                <% categorias.forEach(categoria => { %>
                    <option 
                    value="<%= categoria.id %>"
                    <%= (grupo.categoriaId === categoria.id ) ? 'selected' : '' %>
                    >
                    <%= categoria.nombre %></option>
                <% }) %>
            </select> 
        </div>

        <div class="campo">
            <label>Meet(Google/Zoom) </label>
            <input type="url" name="url" placeholder="Enlace clase" value="<%= grupo.url %>">
        </div>

        <div class="campo enviar">
            <input type="submit" value="Guardar Cambios" class="btn btn-rosa">
        </div>
    </form>
</main>